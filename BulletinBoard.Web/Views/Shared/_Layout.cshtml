<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VIRTUAL_BOARD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cyberpunk.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BulletinBoard.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between w-100">
                    <div class="d-flex flex-column">
                        <a class="navbar-brand py-0 m-0" asp-controller="Announcements" asp-action="Index">
                            /// BOARD_SYSTEM
                        </a>
                        <span class="brand-status">STATUS: ONLINE | REGION: UA</span>
                    </div>
                    <div class="d-flex align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="d-flex align-items-center me-3">
                                <a asp-controller="Announcements" asp-action="MyAnnouncements" class="small text-primary text-decoration-none text-uppercase me-3">МОЇ ОГОЛОШЕННЯ</a>
                                <span class="small text-muted text-uppercase me-2">USER:</span>
                                <span class="small text-primary text-uppercase me-3">@User.Identity.Name</span>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger btn-custom-sm">LOGOUT</button>
                                </form>
                            </div>
                        }
                        else
                        {
                            <div class="me-3">
                                <a asp-controller="Account" asp-action="Login" class="btn btn-sm btn-outline-primary btn-custom-sm">LOGIN</a>
                                <a asp-controller="Account" asp-action="Register" class="btn btn-sm btn-outline-secondary btn-custom-sm">JOIN</a>
                            </div>
                        }
                        <a asp-controller="Announcements" asp-action="Create" class="btn btn-post">+ СТВОРИТИ</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BulletinBoard.Web
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
