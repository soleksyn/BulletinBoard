@model IEnumerable<BulletinBoard.Web.Models.AnnouncementViewModel>

@{
    ViewData["Title"] = "MY_ANNOUNCEMENTS";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="cyber-header m-0">МОЇ ОГОЛОШЕННЯ</h2>
    <a href="@Url.Action("Create", "Announcements")" class="btn btn-cyber-primary">
        <i class="fas fa-plus me-2"></i>СТВОРИТИ
    </a>
</div>

<div id="announcementsContainer">
    @if (!Model.Any())
    {
        <div class="text-center p-5 border-custom">
            <div class="text-muted mb-3">У вас ще немає оголошень.</div>
            <a href="@Url.Action("Create", "Announcements")" class="btn btn-cyber">СТВОРИТИ ПЕРШЕ</a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card card-custom h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <span class="badge badge-cyber">@item.CategoryName</span>
                                <span class="text-cyan font-monospace">@string.Format("{0:C}", item.Price ?? 0)</span>
                            </div>
                            <h5 class="card-title text-uppercase mb-3">@item.Title</h5>
                            <p class="card-text text-muted small mb-4 text-truncate-2">@item.Description</p>
                            
                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <div class="btn-group">
                                    <a href="@Url.Action("Details", "Announcements", new { id = item.Id })" class="btn btn-custom-sm">ПЕРЕГЛЯД</a>
                                    <a href="@Url.Action("Edit", "Announcements", new { id = item.Id })" class="btn btn-custom-sm">РЕДАГУВАТИ</a>
                                </div>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Ви впевнені?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger btn-sm border-0">ВИДАЛИТИ</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>